{
  "manifest_version": 2,
  "name": "arxiv - shortscience integration",
  "version": "0.1",
  "permissions": [
    "http://www.shortscience.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://arxiv.org/abs/*",
        "https://arxiv.org/abs/*"
      ],
      "js": [
        "jquery-2.2.3.min.js",
        "content.js"
      ]
    }
  ]
}
